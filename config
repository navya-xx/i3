# Startup items on request
set $primary left
set $secondary right
set $startup_system Startup (h) Home, (o) Office, (b) Blank
set $chromium exec /usr/bin/chromium-browser; move workspace to output $primary
set $thunderbird exec /usr/bin/thunderbird; move workspace to output $primary
set $jabref exec /usr/bin/jabref; move workspace to output $primary
set $main_workspace workspace 1; move workspace to output $secondary
# set $workspace_pos exec --no-startup-id i3-msg 'focus output $primary; workspace 2; move workspace to output $primary; workspace 3; move workspace to output $primary; workspace 4; move workspace to output $primary; workspace 1; move workspace to output $secondary'
# set $home exec /usr/bin/chromium-browser
mode "$startup_system" {
	# OFFICE
	bindsym o focus output $primary; $chromium; $thunderbird; $jabref; $main_workspace, mode "default"
	# HOME
	bindsym h focus output $primary; $chromium; $main_workspace, mode "default"
	# Blank
	bindsym b exec --no-startup-id i3msg 'workspace 1'\
				mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"

}
bindsym $mod+Shift+Return mode "$startup_system"

